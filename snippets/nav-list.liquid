<div class="nav-list {% if class != blank %}{{ class }}{% endif %}">
  {% assign navList = linklists[handle] %}
  <ul>
    {% for link in navList.links %}
      <li>
        {% assign child_list_handle = link.title | handleize %}
        {% if linklists[child_list_handle].links != blank %}
            <div class="nested-links-wrap">
              <a class="text-link" href="{{ link.url }}">{{ link.title }}</a>
              <div class="nested-items-wrap">
                {% for childlink in linklists[child_list_handle].links %}
                  <a class="text-childlink" href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                {% endfor %}
              </div>
            </div>
        {% else %}
          <a class="text-link" href="{{ link.url }}">{{ link.title }}</a>
        {% endif %}
      </li>
    {% endfor %}
  </ul>

</div>
